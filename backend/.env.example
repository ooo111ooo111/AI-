PORT=3000
MONGODB_URI=mongodb://localhost:27017/crypto_analysis
NODE_ENV=development
FRONTEND_URL=http://localhost:5173
RSI_DEBUG=true

# OAuth 登录配置
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_CALLBACK_URL=http://localhost:3000/api/auth/google/callback

QQ_APP_ID=
QQ_APP_KEY=
QQ_CALLBACK_URL=http://localhost:3000/api/auth/qq/callback

# 阿里云 DashScope API (Qwen3-VL-Flash)
# 获取 API Key: https://help.aliyun.com/zh/model-studio/get-api-key
DASHSCOPE_API_KEY=your_dashscope_api_key_here
# 北京地域(默认)
DASHSCOPE_BASE_URL=https://dashscope.aliyuncs.com/compatible-mode/v1
# 新加坡地域(可选)
# DASHSCOPE_BASE_URL=https://dashscope-intl.aliyuncs.com/compatible-mode/v1

# 备用:DeepSeek API(已弃用,使用 Qwen3-VL-Flash)
# DEEPSEEK_API_KEY=your_deepseek_api_key_here
# DEEPSEEK_BASE_URL=https://api.deepseek.com

# 文件上传配置
UPLOAD_DIR=uploads

# 阿里云 OSS 配置
# 获取 OSS 密钥: https://ram.console.aliyun.com/manage/ak
OSS_REGION=oss-cn-hangzhou
OSS_ACCESS_KEY_ID=your_access_key_id_here
OSS_ACCESS_KEY_SECRET=your_access_key_secret_here
OSS_BUCKET=your_bucket_name_here
OSS_ENDPOINT=oss-cn-hangzhou.aliyuncs.com

# 是否使用OSS(true/false,默认false使用本地存储)
USE_OSS=true

# 网络代理(可选)
# 仅在需要通过代理访问 Google OAuth 时设置
# HTTPS_PROXY=http://127.0.0.1:7897
# HTTP_PROXY=http://127.0.0.1:7897

# JWT 配置
JWT_SECRET=your_super_secret_jwt_key
JWT_ACCESS_EXPIRE=7d
JWT_REFRESH_EXPIRE=30d

# 邀请码 / 量化配置
DEFAULT_INVITE_CODE=
# 普通用户请求 Gate 实盘接口 (必须设置)
GATE_API_BASE_URL=https://api.gateio.ws/api/v4
# 管理员账号专用: 可选覆盖模拟盘地址
# GATE_TESTNET_API_BASE_URL=https://api-testnet.gateapi.io/api/v4

# 管理员邮箱(用于访问管理端,多个用逗号分隔)
ADMIN_EMAILS=

# X 热点推文配置
ENABLE_HOTSPOT=false
X_API_BEARER_TOKEN=
X_HOT_ACCOUNTS=elonmusk,cz_binance,realDonaldTrump
X_HOT_FETCH_INTERVAL_MS=90000
X_HOT_KEYWORDS=btc,bitcoin,crypto,eth,ethereum,sol,solana,币圈,加密,web3
X_HOT_RETENTION_DAYS=7
